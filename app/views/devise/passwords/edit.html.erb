<% provide(:title, "Change password") %>

<h2>Change your password</h2>

<div class="row" style="margin-top:5px">
  <div class="span5 offset2">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name),
                        :html => {:method => :put, :class => 'form-horizontal'}) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, :as => :hidden %>
        <%= f.full_error :reset_password_token %>

          <%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
          <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>

          <%= f.button :submit, "Change my password", :class => 'btn-primary pull-right' %>

    <% end %>
  </div>
  <div class="span5 offset4">
    <%= render "devise/shared/links" %>
  </div>
</div>


