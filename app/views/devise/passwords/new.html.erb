<% provide(:title, "Forgot your password?") %>

<h2>Forgot your password?</h2>

<div class="row" style="margin-top:5px">
  <div class="span5 offset2">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name),
                        :html => {:method => :post, :class => 'form-horizontal'}) do |f| %>
        <%= f.error_notification %>

        <%= f.input :email, :required => true, :autofocus => true %>
        <%= f.button :submit, "Send me reset password instructions", :class => 'btn-primary pull-right' %>

    <% end %>
  </div>
</div>
