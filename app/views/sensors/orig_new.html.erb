<% provide(:title, 'New sensor') %>
<h1>New sensor</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@sensor, :html => {:class => "form-horizontal"}) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <div class="control-group">
          <label class="control-label" for="name">Sensor name</label>
          <div class="controls">
            <%= f.text_field :name, :placeholder => "Sensor name" %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="type">Sensor type</label>
          <div class="controls">
             <%= select("sensor", "type", Sensor::CATEGORIES, {:include_blank => true, :style=> 'width:100%'})%>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="name">Sensor type</label>
          <div class="controls">

            <label class="radio" >
              <%= f.radio_button :type, "Clip gauge" %>
              Clip gauge
            </label>
            <label class="radio" >
              <%= f.radio_button :type, "LVD transducer" %>
              LVD transducer
            </label>
            <label class="radio" >
              <%= f.radio_button :type, "Linear stage" %>
              Linear stage
            </label>
            <label class="radio" >
              <%= f.radio_button :type, "4" %>
              Sensor Type 4
            </label>

          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="type">ECN</label>

          <div class="controls">
            <%= f.text_field :ecn, :placeholder => "Equipment Control Number (ECN)" %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="type">MCN</label>

          <div class="controls">
            <%= f.text_field :mcn, :placeholder => "Metrology Control Number (MCN) " %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="model">Model</label>

          <div class="controls">
            <%= f.text_field :model, :placeholder => "Model" %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="serial_no">Serial Number</label>

          <div class="controls">
            <%= f.text_field :serial_no, :placeholder => "Serial Number" %>
          </div>
        </div>


        <%= f.submit "Create sensor", class: "btn btn-primary" %>
        <%= link_to "Cancel", sensors_path, class: "btn btn-primary" %>

    <% end %>
  </div>
</div>

